{
  "manifest_version": 3,
  "name": "Subline",
  "description": "Custom learning-focused captions and transcript for YouTube.",
  "version": "0.1.0",

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content/content.js"]
    }
  ]
}
